<% @title_bar_right_text = '<a href="' + new_tag_path + '"><img alt="" src="/images/icons/add.png"></a> ' + (link_to "Create New Tag", new_tag_path) %>

<% title "Tags" %>

<br clear="all"/>

<table class="record_listing" width="800" cellpadding="0" cellspacing="0">
  <tr class="record_listing_header">
    <th>Tag Name</th>
    <th>Tier</th>
    <th>Value</th>
    <th>Enabled</th>
    <th>Always Fill</th>
    <th>Sample Rate</th>
    <th>Freq Cap</th>
    <th>Rej Time</th>
    <th>Size</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for tag in @tags %>
    <tr class="record_row_<%= cycle("odd", "even")%>">
      <td nowrap="true" class="record_column"><%=h tag.tag_name %></td>
      <td class="record_column"><%=h tag.tier %></td>
      <td class="record_column"><%=h tag.value_in_cents %></td>
      <td class="record_column"><%=h tag.enabled_s %></td>
      <td class="record_column"><%=h tag.always_fill_s %></td>
      <td class="record_column"><%=h tag.sample_rate %></td>
      <td class="record_column"><%=h tag.frequency_cap %></td>
      <td class="record_column"><%=h tag.rejection_time %></td>
      <td class="record_column"><%=h tag.size %></td>
      <td class="record_action"><%= link_to "View", tag, :action=> :show %></td>
      <td class="record_action"><%= link_to "Edit", edit_tag_path(tag) %></td>
      <td class="record_action"><%= link_to "Delete", tag, :confirm => 'Are you sure?', :method => "delete" %></td>
    </tr>
  <% end %>
</table>

