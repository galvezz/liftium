<%% title "<%= plural_name.titleize %>" %>

<table class="record_listing">
  <tr class="record_listing_header">
  <%- for attribute in attributes -%>
    <th><%= attribute.column.human_name.titleize %></th>
  <%- end -%>
  </tr>
  <%% for <%= singular_name %> in @<%= plural_name %> %>
    <tr class="record_row_<%%= cycle("odd", "even")%>">
    <%- for attribute in attributes -%>
      <td class="record_column"><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
      <td class="record_action"><%%= link_to "View", <%= singular_name %>, :action=> :show %></td>
    <%- end -%>
    <%- if action? :edit -%>
      <td class="record_action"><%%= link_to "Edit", edit_<%= singular_name %>_path(<%= singular_name %>) %></td>
    <%- end -%>
    <%- if action? :destroy -%>
      <td class="record_action"><%%= link_to "Delete", <%= singular_name %>, :confirm => 'Are you sure?', :method => "delete" %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>

<%- if action? :new -%>
<p><%%= link_to "New <%= singular_name.titleize %>", new_<%= singular_name %>_path %></p>
<%- end -%>
